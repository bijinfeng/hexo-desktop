{
  "name": "hexo-desktop",
  "private": true,
  "version": "0.0.1",
  "description": "Hexo desktop",
  "author": "kebai <2804673379@qq.com>",
  "license": "MIT",
  "main": "./out/main/index.js",
  "scripts": {
    "lint:fix": "eslint ./src --ext .jsx,.js,.ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.{js,jsx,ts,tsx,css,md,json}\" ",
    "lint": "yarn lint:format && yarn lint:fix ",
    "prepare": "husky install",
    "cz": "cz",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "build:all": "npm run build && electron-builder --config -p always"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.41.0",
    "@bytemd/plugin-gfm": "^1.17.4",
    "@bytemd/react": "^1.17.4",
    "@electron-toolkit/preload": "^1.0.2",
    "@electron-toolkit/utils": "^1.0.2",
    "@sentry/electron": "^4.1.2",
    "ahooks": "^3.7.2",
    "classnames": "^2.3.2",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "eventemitter3": "^4.0.7",
    "less": "^4.1.3",
    "lodash-es": "^4.17.21",
    "react-router-dom": "^6.4.2",
    "recoil": "^0.7.6",
    "vite-plugin-svgr": "^2.2.1"
  },
  "devDependencies": {
    "@arco-plugins/vite-react": "^1.3.2",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vitejs/plugin-react": "^2.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^21.1.0",
    "electron-builder": "^23.3.3",
    "electron-vite": "^1.0.14",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.4"
  }
}
